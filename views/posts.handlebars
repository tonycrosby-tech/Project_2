<div class="container">
    <div id="" class="col m12">
        <h5 class="center">Create A Post</h5>
        <br>
        <div class="container">
            <form id="formCreatePost">
                <h6>Select Categories:</h6>
                <select id='myCategories'>
                    <option value="" disabled selected>Categories</option>
                    {{#each categories}}
                    {{> categories/categories-block}}
                    {{/each}}
                    {{!-- <option value="1">Sports</option>
                    <option value="2">Movies</option>
                    <option value="3">Food</option> --}}
                </select>
                <div class="row">
                    <div class="col s12">
                        <label for="usersPosting">Title:<textarea placeholder='Enter a title for your post here' id="titlePost"
                                class="materialize-textarea"></textarea></label>
                    </div>
                    <div class="col s12">
                        <label>Write your post here<textarea id="usersPosting" placeholder='Enter a description for your post here'
                                class="materialize-textarea"></textarea></label>
                    </div>
                </div>

            </form>
            <button type="button" class="btn waves-effect waves-light blue darken-4 create-post"
                id="createPost">Create</button>
        </div>
    </div>
</div>
<script src="/js/posts.js"></script>